{
  "name": "brush",
  "version": "0.0.1",
  "publisher": "sudoaugustin",
  "displayName": "Brush",
  "description": "Create your own vscode theme. You can also use popular color palettes such as tailwind and material palettet.",
  "author": {
    "name": "Augutstin Joseph",
    "email": "sudoaugustin@gmail.com"
  },
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Themes",
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "preview": true,
  "keywords": [
    "theme",
    "design_tool"
  ],
  "icon": "https://raw.githubusercontent.com/sudoaugustin/brush/main/media/logo.png",
  "main": "./extension/index.js",
  "contributes": {
    "commands": [
      {
        "title": "Start Theming",
        "command": "brush.init",
        "category": "Brush"
      }
    ],
    "themes": [
      {
        "id": "brush_theme",
        "label": "Brush Theme",
        "path": "themes/index.json",
        "uiTheme": "vs-dark"
      }
    ],
    "configuration": {
      "title": "Brush",
      "properties": {
        "brush.palette": {
          "type": "string",
          "default": "Tailwind",
          "enum": [
            "Tailwind",
            "Material"
          ],
          "markdownDescription": "Your favourite color palette to use theming."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "build:app": "npm --prefix react-app run build",
    "watch:app": "npm --prefix react-app run watch"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@vscode/test-electron": "^1.6.2",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {}
}
