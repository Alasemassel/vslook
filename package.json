{
  "name": "brush",
  "version": "0.0.1",
  "publisher": "sudoaugustin",
  "displayName": "Brush",
  "description": "Create your own vscode theme. You can also use popular color palettes such as tailwind and material palettet.",
  "author": {
    "name": "Augutstin Joseph",
    "email": "sudoaugustin@gmail.com"
  },
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Themes",
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "preview": true,
  "keywords": [
    "theme",
    "design_tool"
  ],
  "icon": "https://raw.githubusercontent.com/sudoaugustin/brush/main/media/logo.png",
  "main": "./extension/index.js",
  "contributes": {
    "commands": [
      {
        "title": "Start Theming",
        "command": "brush.init",
        "category": "Brush"
      }
    ],
    "themes": [
      {
        "id": "brush_theme",
        "label": "Brush Theme",
        "path": "themes/index.json",
        "uiTheme": "vs-dark"
      }
    ],
    "configuration": {
      "title": "Brush",
      "properties": {
        "brush.palette": {
          "type": "string",
          "default": "Tailwind",
          "enum": [
            "Tailwind",
            "Material"
          ],
          "markdownDescription": "Your favourite color palette to use theming."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "watch": "concurrently 'npm:watch:*'",
    "build": "concurrently 'npm:build:*'",
    "watch:esbuild": "esbuild src/index.js --bundle --outdir=dist --watch  --loader:.js=jsx --inject:./src/shim.js",
    "build:esbuild": "esbuild src/index.js --bundle --outdir=dist --minify --loader:.js=jsx --inject:./src/shim.js",
    "watch:tailwind": "npx tailwindcss -i ./tailwind.css -o ./dist/index.css -w",
    "build:tailwind": "npx tailwindcss -i ./tailwind.css -o ./dist/index.css -m"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@vscode/test-electron": "^1.6.2",
    "concurrently": "^6.5.1",
    "esbuild": "^0.14.7",
    "eslint": "^8.5.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-testing-library": "^5.0.1",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "prettier-plugin-tailwindcss": "^0.1.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^3.0.18",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^0.1.4",
    "@radix-ui/react-tabs": "^0.1.4",
    "@radix-ui/react-toggle-group": "^0.1.4",
    "@radix-ui/react-tooltip": "^0.1.6",
    "colord": "^2.9.2",
    "react-colorful": "^5.5.1",
    "react-use": "^17.3.2",
    "recoil": "^0.6.1"
  }
}
