{
  "name": "vslook",
  "displayName": "VSLook",
  "icon": "media/logo.png",
  "main": "./extension/index.js",
  "version": "0.1.0",
  "preview": true,
  "license": "MIT",
  "publisher": "sudoaugustin",
  "description": "Customize your VSCode.",
  "author": {
    "name": "Augutstin Joseph",
    "email": "sudoaugustin@gmail.com"
  },
  "repository": {
    "url": "https://github.com/sudoaugustin/vslook",
    "type": "git"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Themes",
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onCommand:vslook.edit"
  ],
  "keywords": [
    "theme",
    "design_tool"
  ],
  "contributes": {
    "commands": [
      {
        "title": "Edit",
        "command": "vslook.edit",
        "category": "VSLook"
      }
    ],
    "configuration": {
      "title": "VSLook",
      "properties": {
        "vslook.palette.type": {
          "type": "string",
          "enum": [
            "None",
            "Tailwind",
            "Material"
          ],
          "default": "Tailwind",
          "description": "The color palette to merge with your color variables."
        },
        "vslook.palette.colors": {
          "type": "object",
          "default": {},
          "description": "Add your custom color variable here."
        }
      }
    }
  },
  "scripts": {
    "test": "eslint . && node ./test/run.js",
    "build-app": "npm --prefix app run build",
    "watch-app": "npm --prefix app run watch",
    "local-release": "vsce package && code --install-extension vslook-*.vsix"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.13.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  }
}
