{
  "name": "vslook",
  "version": "0.0.1",
  "publisher": "sudoaugustin",
  "displayName": "VSLook",
  "description": "Customize how your vscode should look like.",
  "author": {
    "name": "Augutstin Joseph",
    "email": "sudoaugustin@gmail.com"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Themes",
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "preview": true,
  "keywords": [
    "theme",
    "design_tool"
  ],
  "icon": "https://raw.githubusercontent.com/sudoaugustin/vslook/main/media/logo.png",
  "main": "./extension/index.js",
  "contributes": {
    "commands": [
      {
        "title": "Edit Theme",
        "command": "vslook.edit",
        "category": "VSLook"
      }
    ],
    "configuration": {
      "title": "VSLook",
      "properties": {
        "vslook.palette": {
          "type": "string",
          "default": "Tailwind",
          "enum": [
            "Tailwind",
            "Material"
          ],
          "markdownDescription": "Choose which color system to use design."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "build-app": "npm --prefix app run build",
    "watch-app": "npm --prefix app run watch"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@vscode/test-electron": "^1.6.2",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  }
}
