{
  "name": "react",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "watch": "concurrently 'npm:watch:*'",
    "build": "concurrently 'npm:build:*'",
    "watch:esbuild": "esbuild index.jsx --bundle --outdir=../dist --watch  --inject:shim.js",
    "build:esbuild": "esbuild index.jsx --bundle --outdir=../dist --minify --inject:shim.js",
    "watch:tailwind": "npx tailwindcss -i ./tailwind.css -o ../dist/index.css -w",
    "build:tailwind": "npx tailwindcss -i ./tailwind.css -o ../dist/index.css -m"
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "esbuild": "^0.14.7",
    "eslint": "^8.5.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-testing-library": "^5.0.1",
    "prettier-plugin-tailwindcss": "^0.1.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^3.0.18"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^0.1.4",
    "@radix-ui/react-tabs": "^0.1.4",
    "@radix-ui/react-toggle-group": "^0.1.4",
    "@radix-ui/react-tooltip": "^0.1.6",
    "colord": "^2.9.2",
    "react-colorful": "^5.5.1",
    "react-use": "^17.3.2",
    "recoil": "^0.6.1",
    "use-debounce": "^7.0.1"
  }
}
